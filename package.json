  "scripts": {
    "all-integration-tests": "tap -j 1 --no-coverage -t 90 test/autopilotrpc-integration/*.js test/chainrpc-integration/*.js test/grpc-integration/*.js test/integration/*.js test/invoicesrpc-integration/*.js test/signerrpc-integration/*.js test/walletrpc-integration/*.js",
